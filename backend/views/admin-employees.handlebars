    <script src="js/api.js"></script>
    <script>
        const api = new API();
        let allEmployees = [];
        let allDepartments = [];

        async function updateEmployeesPage() {
            try {
                const [employeesResponse, departmentsResponse] = await Promise.all([
                    api.getEmployees(),
                    api.getDepartments()
                ]);

                allEmployees = employeesResponse || [];
                allDepartments = departmentsResponse || [];

                console.log('Loaded Employees from MongoDB:', allEmployees);
                updateStats();
                updateEmployeeTable(allEmployees);
                updatePaginationInfo();
            } catch (error) {
                console.error('Error loading employees:', error);
            }
        }

        function updateStats() {
            const totalEmployees = allEmployees.length;
            const activeEmployees = allEmployees.filter(emp => emp.status === 'Active').length;
            const totalDepartments = allDepartments.length;
            const totalSalary = allEmployees.reduce((sum, emp) => sum + (emp.salary || 0), 0);

            const statsGrid = document.getElementById('statsGrid');
            statsGrid.innerHTML = `
                <div class="stat-box">
                    <div class="stat-icon">üë•</div>
                    <div class="stat-label">Total Employees</div>
                    <div class="stat-value">${totalEmployees}</div>
                </div>

                <div class="stat-box">
                    <div class="stat-icon">‚úÖ</div>
                    <div class="stat-label">Active Employees</div>
                    <div class="stat-value">${activeEmployees}</div>
                </div>

                <div class="stat-box">
                    <div class="stat-icon">üè¢</div>
                    <div class="stat-label">Departments</div>
                    <div class="stat-value">${totalDepartments}</div>
                </div>

                <div class="stat-box">
                    <div class="stat-icon">üí∞</div>
                    <div class="stat-label">Total Monthly Salary</div>
                    <div class="stat-value">‚Çπ${(totalSalary / 100000).toFixed(2)}L</div>
                </div>
            `;

            const employeeCount = document.getElementById('employeeCount');
            if (employeeCount) {
                employeeCount.textContent = `${totalEmployees} employees found`;
            }
        }

        function updateEmployeeTable(employees) {
            let tableBody = document.getElementById("employeesTable");
            tableBody.innerHTML = '';

            for (let emp of employees) {
                let row = document.createElement("tr");

                let nameParts = emp.name.split(' ');
                let initials = nameParts[0][0] + (nameParts[1] ? nameParts[1][0] : '');

                let formattedSalary = emp.salary.toLocaleString();

                let date = new Date(emp.joinDate);
                let formattedDate = date.toLocaleDateString('en-IN', {
                    year: 'numeric',
                    month: 'short',
                    day: '2-digit'
                });

                let statusClass = emp.status === 'Active' ? 'status-active' : 'status-inactive';

                row.innerHTML = `
                    <td>
                        <div class="employee-info">
                            <div class="employee-avatar">${initials}</div>
                            <div class="employee-details">
                                <div class="employee-name">${emp.name}</div>
                                <div class="employee-id">${emp.employeeId}</div>
                            </div>
                        </div>
                    </td>
                    <td>${emp.department}</td>
                    <td>${emp.position}</td>
                    <td><span class="salary-amount">‚Çπ${formattedSalary}</span></td>
                    <td>${formattedDate}</td>
                    <td><span class="status-badge ${statusClass}">${emp.status}</span></td>
                    <td>
                        <div class="action-buttons-cell">
                            <button onclick="viewEmployee('${emp._id}')" class="action-btn-small">View</button>
                            <button onclick="editEmployee('${emp._id}')" class="action-btn-small edit">Edit</button>
                            <button onclick="deleteEmployee('${emp._id}', '${emp.name}')" class="action-btn-small delete">Delete</button>
                        </div>
                    </td>
                `;

                tableBody.appendChild(row);
            }
        }

        function updatePaginationInfo() {
            const paginationInfo = document.querySelector('.pagination-info');
            if (paginationInfo) {
                paginationInfo.textContent = `Showing 1-${allEmployees.length} of ${allEmployees.length} employees`;
            }
        }

        async function deleteEmployee(id, name) {
            if (confirm(`Are you sure you want to delete ${name}?`)) {
                try {
                    await api.deleteEmployee(id);
                    alert('Employee deleted successfully!');
                    updateEmployeesPage();
                } catch (error) {
                    alert('Error deleting employee: ' + error.message);
                }
            }
        }

        function viewEmployee(id) {
            const employee = allEmployees.find(emp => emp._id === id);
            if (!employee) return;

            const modal = document.createElement('div');
            modal.id = 'viewEmployeeModal';
            modal.style.cssText = 'position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000;';

            modal.innerHTML = `
                <div style="background: white; border-radius: 12px; padding: 2rem; width: 90%; max-width: 500px; max-height: 90vh; overflow-y: auto;">
                    <h2 style="margin-bottom: 1.5rem; color: #1a202c;">Employee Details</h2>
                    <div style="line-height: 2;">
                        <p><strong>Name:</strong> ${employee.name}</p>
                        <p><strong>Employee ID:</strong> ${employee.employeeId}</p>
                        <p><strong>Email:</strong> ${employee.email}</p>
                        <p><strong>Department:</strong> ${employee.department}</p>
                        <p><strong>Position:</strong> ${employee.position}</p>
                        <p><strong>Salary:</strong> ‚Çπ${employee.salary.toLocaleString()}</p>
                        <p><strong>Phone:</strong> ${employee.phone || 'N/A'}</p>
                        <p><strong>Address:</strong> ${employee.address || 'N/A'}</p>
                        <p><strong>Status:</strong> ${employee.status}</p>
                        <p><strong>Join Date:</strong> ${new Date(employee.joinDate).toLocaleDateString('en-IN')}</p>
                    </div>
                    <button onclick="closeViewModal()" style="width: 100%; margin-top: 1.5rem; padding: 0.75rem; background: #667eea; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                        Close
                    </button>
                </div>
            `;

            document.body.appendChild(modal);
        }

        function closeViewModal() {
            const modal = document.getElementById('viewEmployeeModal');
            if (modal) modal.remove();
        }

        function editEmployee(id) {
            const employee = allEmployees.find(emp => emp._id === id);
            if (!employee) return;

            const modal = document.createElement('div');
            modal.id = 'editEmployeeModal';
            modal.style.cssText = 'position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000;';

            modal.innerHTML = `
                <div style="background: white; border-radius: 12px; padding: 2rem; width: 90%; max-width: 500px; max-height: 90vh; overflow-y: auto;">
                    <h2 style="margin-bottom: 1.5rem; color: #1a202c;">Edit Employee</h2>
                    <form id="editEmployeeForm">
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Employee ID</label>
                            <input type="text" name="employeeId" value="${employee.employeeId}" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Name</label>
                            <input type="text" name="name" value="${employee.name}" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Email</label>
                            <input type="email" name="email" value="${employee.email}" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Department</label>
                            <select name="department" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                                ${allDepartments.map(dept => `<option value="${dept.name}" ${dept.name === employee.department ? 'selected' : ''}>${dept.name}</option>`).join('')}
                            </select>
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Position</label>
                            <input type="text" name="position" value="${employee.position}" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Salary</label>
                            <input type="number" name="salary" value="${employee.salary}" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Phone</label>
                            <input type="tel" name="phone" value="${employee.phone || ''}" style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Status</label>
                            <select name="status" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                                <option value="Active" ${employee.status === 'Active' ? 'selected' : ''}>Active</option>
                                <option value="Inactive" ${employee.status === 'Inactive' ? 'selected' : ''}>Inactive</option>
                                <option value="On Leave" ${employee.status === 'On Leave' ? 'selected' : ''}>On Leave</option>
                            </select>
                        </div>
                        <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
                            <button type="submit" style="flex: 1; padding: 0.75rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                                Update Employee
                            </button>
                            <button type="button" onclick="closeEditModal()" style="flex: 1; padding: 0.75rem; background: #f1f5f9; color: #374151; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            `;

            document.body.appendChild(modal);

            document.getElementById('editEmployeeForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                const employeeData = Object.fromEntries(formData.entries());
                employeeData.salary = parseInt(employeeData.salary);

                try {
                    await api.updateEmployee(id, employeeData);
                    alert('Employee updated successfully!');
                    closeEditModal();
                    updateEmployeesPage();
                } catch (error) {
                    alert('Error updating employee: ' + error.message);
                }
            });
        }

        function closeEditModal() {
            const modal = document.getElementById('editEmployeeModal');
            if (modal) modal.remove();
        }

        function showAddEmployeeModal() {
            const modal = document.createElement('div');
            modal.id = 'addEmployeeModal';
            modal.style.cssText = 'position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000;';

            modal.innerHTML = `
                <div style="background: white; border-radius: 12px; padding: 2rem; width: 90%; max-width: 500px; max-height: 90vh; overflow-y: auto;">
                    <h2 style="margin-bottom: 1.5rem; color: #1a202c;">Add New Employee</h2>
                    <form id="addEmployeeForm">
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Employee ID</label>
                            <input type="text" name="employeeId" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Name</label>
                            <input type="text" name="name" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Email</label>
                            <input type="email" name="email" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Password</label>
                            <input type="password" name="password" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Department</label>
                            <select name="department" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                                <option value="">Select Department</option>
                                ${allDepartments.map(dept => `<option value="${dept.name}">${dept.name}</option>`).join('')}
                            </select>
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Position</label>
                            <input type="text" name="position" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Salary</label>
                            <input type="number" name="salary" required style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Phone</label>
                            <input type="tel" name="phone" style="width: 100%; padding: 0.75rem; border: 1px solid #e2e8f0; border-radius: 8px;">
                        </div>
                        <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
                            <button type="submit" style="flex: 1; padding: 0.75rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                                Add Employee
                            </button>
                            <button type="button" onclick="closeAddModal()" style="flex: 1; padding: 0.75rem; background: #f1f5f9; color: #374151; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            `;

            document.body.appendChild(modal);

            document.getElementById('addEmployeeForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                const employeeData = Object.fromEntries(formData.entries());
                employeeData.salary = parseInt(employeeData.salary);

                try {
                    await api.createEmployee(employeeData);
                    alert('Employee added successfully!');
                    closeAddModal();
                    updateEmployeesPage();
                } catch (error) {
                    alert('Error adding employee: ' + error.message);
                }
            });
        }

        function closeAddModal() {
            const modal = document.getElementById('addEmployeeModal');
            if (modal) modal.remove();
        }

        document.addEventListener('DOMContentLoaded', updateEmployeesPage);
    </script>


