<script>
    const api = new API();
    let allEmployees = [];
    let allDepartments = [];

    async function loadDashboardData() {
        try {
            const [employeesResponse, departmentsResponse] = await Promise.all([
                api.getEmployees(),
                api.getDepartments()
            ]);

            allEmployees = employeesResponse || [];
            allDepartments = departmentsResponse || [];

            updateQuickStats();
            displayRecentEmployees();

            console.log('Dashboard loaded successfully');
        } catch (error) {
            console.error('Error loading dashboard data:', error);
        }
    }

    function updateQuickStats() {
        const totalEmployees = allEmployees.length;
        const totalDepartments = allDepartments.length;
        const activeEmployees = allEmployees.filter(emp => emp.status === 'Active').length;
        const totalSalary = allEmployees.reduce((sum, emp) => sum + (emp.salary || 0), 0);

        document.querySelector('.quick-stats').innerHTML = `
            <div class="quick-stat">
                <div class="stat-icon">üë•</div>
                <div class="stat-label">Total Employees</div>
                <div class="quick-stat-number">${totalEmployees}</div>
            </div>
            <div class="quick-stat">
                <div class="stat-icon">üè¢</div>
                <div class="stat-label">Departments</div>
                <div class="quick-stat-number">${totalDepartments}</div>
            </div>
            <div class="quick-stat">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-label">Active Employees</div>
                <div class="quick-stat-number">${activeEmployees}</div>
            </div>
            <div class="quick-stat">
                <div class="stat-icon">üí∞</div>
                <div class="stat-label">Total Monthly Salary</div>
                <div class="quick-stat-number">‚Çπ${(totalSalary / 100000).toFixed(2)}L</div>
            </div>
        `;
    }

    function displayRecentEmployees() {
        const recentEmployees = allEmployees.slice(0, 5);
        const employeeListHTML = recentEmployees.map(emp => `
            <div class="employee-item">
                <div class="employee-info">
                    <div class="employee-name">${emp.name}</div>
                    <div class="employee-position">${emp.position} - ${emp.department}</div>
                </div>
                <div class="employee-status ${emp.status === 'Active' ? 'status-active' : 'status-pending'}">
                    ${emp.status}
                </div>
            </div>
        `).join('');

        const container = document.querySelector('.recent-employees');
        container.innerHTML = `
            <div class="table-header">
                <h3 class="table-title">Recently Added Employees (${allEmployees.length} total)</h3>
                <div class="table-actions">
                    <a href="/admin-employees.html" class="table-btn">View All</a>
                    <button onclick="showAddEmployeeModal()" class="table-btn primary">Add New</button>
                </div>
            </div>
            ${employeeListHTML}
        `;
    }

    function showAddEmployeeModal() {
        window.location.href = '/admin-employees.html';
    }

    document.addEventListener('DOMContentLoaded', loadDashboardData);
</script>