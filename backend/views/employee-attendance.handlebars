    <script>
        const api = new API();
        let currentEmployee = null;
        let attendanceRecords = [];
        let loggedInEmployeeId = null;

        async function loadEmployeeData() {
            try {
               
                const response = await fetch('/api/employees/me');
                const result = await response.json();
                
                if (result.success && result.data) {
                    currentEmployee = result.data;
                    loggedInEmployeeId = currentEmployee._id;
                    console.log('Current Employee:', currentEmployee);
                    updateEmployeeHeader();
                } else {
                    throw new Error('Failed to load employee data');
                }
            } catch (error) {
                console.error('Error loading employee:', error);
                alert('Error loading employee data. Please make sure you are logged in.');
            }
        }

        function updateEmployeeHeader() {
            
            console.log('Header already rendered with session data');
        }

        async function loadAttendanceData() {
            try {
                if (!loggedInEmployeeId) {
                    console.log('No employee ID available yet');
                    return;
                }

                
                const allRecords = await api.getAttendanceByEmployee(loggedInEmployeeId);
                attendanceRecords = Array.isArray(allRecords) ? allRecords : [];

                updateStats();
                updateRecentRecords();
                updateCalendar();
            } catch (error) {
                console.error('Error loading attendance:', error);
                attendanceRecords = [];
                updateStats();
                updateRecentRecords();
                updateCalendar();
            }
        } function updateStats() {
            const now = new Date();
            const currentMonth = now.getMonth();
            const currentYear = now.getFullYear();

            
            const monthRecords = attendanceRecords.filter(record => {
                const recordDate = new Date(record.date);
                return recordDate.getMonth() === currentMonth &&
                    recordDate.getFullYear() === currentYear;
            });

            const presentCount = monthRecords.filter(r => r.status === 'present').length;
            const absentCount = monthRecords.filter(r => r.status === 'absent').length;
            const lateCount = monthRecords.filter(r => r.status === 'late').length;

            const totalDays = monthRecords.length || 1;
            const attendanceRate = Math.round((presentCount / totalDays) * 100) || 0;

            document.querySelector('.stat-box.present .stat-number').textContent = presentCount;
            document.querySelector('.stat-box.absent .stat-number').textContent = absentCount;
            document.querySelector('.stat-box.late .stat-number').textContent = lateCount;
            document.querySelector('.stat-box.percentage .stat-number').textContent = attendanceRate + '%';
        }

        function updateRecentRecords() {
            const recentSection = document.querySelector('.recent-attendance');
            const header = recentSection.querySelector('.attendance-header');

           
            recentSection.innerHTML = '';
            recentSection.appendChild(header);

            if (attendanceRecords.length === 0) {
                const noData = document.createElement('div');
                noData.style.padding = '2rem';
                noData.style.textAlign = 'center';
                noData.style.color = '#6b7280';
                noData.textContent = 'No attendance records found';
                recentSection.appendChild(noData);
                return;
            }

            
            const sortedRecords = [...attendanceRecords]
                .sort((a, b) => new Date(b.date) - new Date(a.date))
                .slice(0, 10);

            sortedRecords.forEach(record => {
                const recordDiv = document.createElement('div');
                recordDiv.className = 'attendance-record';

                const date = new Date(record.date);
                const dateStr = date.toLocaleDateString('en-US', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });

                const checkIn = record.checkIn || 'N/A';
                const checkOut = record.checkOut || 'N/A';

                let statusClass = 'status-present';
                if (record.status === 'late') statusClass = 'status-late';
                else if (record.status === 'absent') statusClass = 'status-absent';
                else if (record.status === 'leave') statusClass = 'status-leave';

                recordDiv.innerHTML = `
                    <div>
                        <div class="record-date">${dateStr}</div>
                        <div class="record-time">Check-in: ${checkIn} | Check-out: ${checkOut}</div>
                    </div>
                    <span class="record-status ${statusClass}">${record.status.charAt(0).toUpperCase() + record.status.slice(1)}</span>
                `;

                recentSection.appendChild(recordDiv);
            });
        }

        function updateCalendar() {
            const now = new Date();
            const currentMonth = now.getMonth();
            const currentYear = now.getFullYear();

            
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'];
            document.querySelector('.calendar-header').textContent =
                `${monthNames[currentMonth]} ${currentYear} Attendance Calendar`;

            
            const firstDay = new Date(currentYear, currentMonth, 1).getDay();
            const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();

           
            const calendarGrid = document.querySelector('.calendar-grid');

           
            const headers = Array.from(calendarGrid.querySelectorAll('.calendar-day.header'));
            calendarGrid.innerHTML = '';
            headers.forEach(h => calendarGrid.appendChild(h));

            
            for (let i = 0; i < firstDay; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day weekend';
                calendarGrid.appendChild(emptyDay);
            }

            
            for (let day = 1; day <= daysInMonth; day++) {
                const dayDiv = document.createElement('div');
                const dayDate = new Date(currentYear, currentMonth, day);
                const dayOfWeek = dayDate.getDay();

               
                if (dayOfWeek === 0 || dayOfWeek === 6) {
                    dayDiv.className = 'calendar-day weekend';
                    dayDiv.textContent = day;
                } else {
                   
                    const record = attendanceRecords.find(r => {
                        const recordDate = new Date(r.date);
                        return recordDate.getDate() === day &&
                            recordDate.getMonth() === currentMonth &&
                            recordDate.getFullYear() === currentYear;
                    });

                    if (record) {
                        dayDiv.className = `calendar-day ${record.status}`;
                    } else {
                        dayDiv.className = 'calendar-day';
                    }
                    dayDiv.textContent = day;
                }

                calendarGrid.appendChild(dayDiv);
            }
        }

       
        async function init() {
            await loadEmployeeData();
            await loadAttendanceData();
        }

        init();
    </script>


