    <script>
        const api = new API();
        let currentEmployee = null;
        let payrollRecords = [];
        let loggedInEmployeeId = null;

        async function loadEmployeeData() {
            try {
                
                const response = await fetch('/api/employees/me');
                const result = await response.json();
                
                if (result.success && result.data) {
                    currentEmployee = result.data;
                    loggedInEmployeeId = currentEmployee._id;
                    console.log('Current Employee:', currentEmployee);
                    updateEmployeeHeader();
                } else {
                    throw new Error('Failed to load employee data');
                }
            } catch (error) {
                console.error('Error loading employee:', error);
                alert('Error loading employee data. Please make sure you are logged in.');
            }
        }

        function updateEmployeeHeader() {
            
            console.log('Header already rendered with session data');
        }

        async function loadPayrollData() {
            try {
                if (!loggedInEmployeeId) {
                    console.log('No employee ID available yet');
                    return;
                }

                const allRecords = await api.getPayrollByEmployee(loggedInEmployeeId);
                payrollRecords = Array.isArray(allRecords) ? allRecords : [];

                updateSalaryOverview();
                updateLatestBreakdown();
                updatePayslipHistory();
            } catch (error) {
                console.error('Error loading payroll:', error);
                payrollRecords = [];
                updateSalaryOverview();
                updateLatestBreakdown();
                updatePayslipHistory();
            }
        }

        function updateSalaryOverview() {
            if (payrollRecords.length === 0) {
                return;
            }

            
            const sortedRecords = [...payrollRecords].sort((a, b) => {
                const dateA = new Date(a.year, a.month - 1);
                const dateB = new Date(b.year, b.month - 1);
                return dateB - dateA;
            });

            const latestPayroll = sortedRecords[0];
            const avgSalary = payrollRecords.reduce((sum, p) => sum + p.netSalary, 0) / payrollRecords.length;
            const ytdEarnings = payrollRecords.reduce((sum, p) => sum + p.netSalary, 0);

            document.querySelector('.salary-overview').innerHTML = `
                <div class="overview-card primary">
                    <div class="overview-icon">â‚¹</div>
                    <div class="overview-label">Latest Salary</div>
                    <div class="overview-amount">â‚¹${latestPayroll.netSalary.toLocaleString()}</div>
                </div>
                <div class="overview-card">
                    <div class="overview-icon">ðŸ“ˆ</div>
                    <div class="overview-label">Average Salary</div>
                    <div class="overview-amount" style="color: #4299e1;">â‚¹${Math.round(avgSalary).toLocaleString()}</div>
                </div>
                <div class="overview-card">
                    <div class="overview-icon">ðŸ“Š</div>
                    <div class="overview-label">Total Earnings</div>
                    <div class="overview-amount" style="color: #48bb78;">â‚¹${ytdEarnings.toLocaleString()}</div>
                </div>
            `;
        }

        function updateLatestBreakdown() {
            if (payrollRecords.length === 0) {
                document.querySelector('.breakdown-card').innerHTML = `
                    <div style="padding: 2rem; text-align: center; color: #6b7280;">
                        No payroll records found
                    </div>
                `;
                return;
            }

            const sortedRecords = [...payrollRecords].sort((a, b) => {
                const dateA = new Date(a.year, a.month - 1);
                const dateB = new Date(b.year, b.month - 1);
                return dateB - dateA;
            });

            const latest = sortedRecords[0];
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'];

            const totalEarnings = latest.baseSalary + latest.allowances + latest.bonuses;
            const totalDeductions = latest.deductions + latest.tax;

            document.querySelector('.breakdown-card').innerHTML = `
                <h3 class="breakdown-title">Latest Salary Breakdown - ${monthNames[latest.month - 1]} ${latest.year}</h3>
                <div class="breakdown-grid">
                    <div class="breakdown-section">
                        <h4>Earnings</h4>
                        <div class="breakdown-item">
                            <span class="breakdown-label">Basic Salary</span>
                            <span class="breakdown-value">â‚¹${latest.baseSalary.toLocaleString()}</span>
                        </div>
                        <div class="breakdown-item">
                            <span class="breakdown-label">Allowances</span>
                            <span class="breakdown-value">â‚¹${latest.allowances.toLocaleString()}</span>
                        </div>
                        <div class="breakdown-item">
                            <span class="breakdown-label">Bonuses</span>
                            <span class="breakdown-value">â‚¹${latest.bonuses.toLocaleString()}</span>
                        </div>
                        <div class="breakdown-total earnings">
                            <span>Total Earnings</span>
                            <span>â‚¹${totalEarnings.toLocaleString()}</span>
                        </div>
                    </div>
                    <div class="breakdown-section">
                        <h4>Deductions</h4>
                        <div class="breakdown-item">
                            <span class="breakdown-label">Deductions</span>
                            <span class="breakdown-value">â‚¹${latest.deductions.toLocaleString()}</span>
                        </div>
                        <div class="breakdown-item">
                            <span class="breakdown-label">Tax</span>
                            <span class="breakdown-value">â‚¹${latest.tax.toLocaleString()}</span>
                        </div>
                        <div class="breakdown-total deductions">
                            <span>Total Deductions</span>
                            <span>â‚¹${totalDeductions.toLocaleString()}</span>
                        </div>
                    </div>
                </div>
            `;
        }

        function updatePayslipHistory() {
            const payslipContent = document.querySelector('.payslip-content');

            if (payrollRecords.length === 0) {
                payslipContent.innerHTML = `
                    <div style="padding: 2rem; text-align: center; color: #6b7280;">
                        No payslip history found
                    </div>
                `;
                return;
            }

            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'];

           
            const sortedRecords = [...payrollRecords].sort((a, b) => {
                return new Date(b.paymentDate || 0) - new Date(a.paymentDate || 0);
            });

            payslipContent.innerHTML = sortedRecords.map(record => {
                
                let monthDisplay;
                if (typeof record.month === 'string') {
                    monthDisplay = record.month; 
                } else if (typeof record.month === 'number') {
                    monthDisplay = monthNames[record.month - 1] || 'Unknown';
                } else {
                    monthDisplay = 'Unknown';
                }

                const monthYear = `${monthDisplay} ${record.year || new Date().getFullYear()}`;
                const processDate = record.paymentDate ?
                    new Date(record.paymentDate).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) :
                    'Not processed';

                return `
                    <div class="payslip-item">
                        <div class="payslip-info">
                            <div class="payslip-month">${monthYear}</div>
                            <div class="payslip-details">
                                <span class="detail-item">Processed on ${processDate}</span>
                                <span class="detail-item">${record.status.charAt(0).toUpperCase() + record.status.slice(1)}</span>
                            </div>
                        </div>
                        <div class="payslip-amount">â‚¹${record.netSalary.toLocaleString()}</div>
                        <div class="payslip-actions">
                            <button class="action-btn" onclick="viewPayslip('${record._id}')">View</button>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function viewPayslip(id) {
            const payslip = payrollRecords.find(p => p._id === id);
            if (!payslip) return;

            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'];

         
            let monthDisplay;
            if (typeof payslip.month === 'string') {
                monthDisplay = payslip.month;
            } else if (typeof payslip.month === 'number') {
                monthDisplay = monthNames[payslip.month - 1] || 'Unknown';
            } else {
                monthDisplay = 'Unknown';
            }

            const monthYear = `${monthDisplay} ${payslip.year}`;
            const totalEarnings = payslip.baseSalary + payslip.allowances + payslip.bonuses;
            const totalDeductions = payslip.deductions + payslip.tax;

            const modal = document.createElement('div');
            modal.id = 'payslipModal';
            modal.style.cssText = 'position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000;';

            modal.addEventListener('click', function (e) {
                if (e.target === modal) {
                    modal.remove();
                }
            });

            modal.innerHTML = `
                <div style="background: white; border-radius: 12px; padding: 2rem; width: 90%; max-width: 600px; max-height: 90vh; overflow-y: auto;">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                        <h2 style="color: #1a202c;">Payslip - ${monthYear}</h2>
                        <button onclick="document.getElementById('payslipModal').remove()" style="background: none; border: none; font-size: 1.5rem; cursor: pointer; color: #6b7280;">Ã—</button>
                    </div>
                    
                    <div style="background: #f8fafc; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
                        <h3 style="margin-bottom: 0.5rem;">Employee Details</h3>
                        <p><strong>Name:</strong> ${currentEmployee?.name || 'N/A'}</p>
                        <p><strong>Employee ID:</strong> ${currentEmployee?.employeeId || 'N/A'}</p>
                        <p><strong>Department:</strong> ${currentEmployee?.department || 'N/A'}</p>
                        <p><strong>Position:</strong> ${currentEmployee?.position || 'N/A'}</p>
