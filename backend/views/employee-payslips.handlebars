            border-bottom: 1px solid #f1f5f9;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background 0.2s ease;
        }

        .payslip-item:hover {
            background: #f8fafc;
        }

        .payslip-item:last-child {
            border-bottom: none;
        }

        .payslip-info {
