        }

        .overview-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .overview-label {
            font-size: 0.875rem;
            opacity: 0.8;
            margin-bottom: 0.5rem;
        }

        .overview-card.primary .overview-label {
            opacity: 0.9;
        }

        .overview-amount {
            font-size: 2rem;
            font-weight: 700;
        }

