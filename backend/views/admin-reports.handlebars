        border: 1px solid #e2e8f0;
        margin-bottom: 2rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 768px) {
        .admin-nav ul {
            gap: 1rem;
        }
    }
