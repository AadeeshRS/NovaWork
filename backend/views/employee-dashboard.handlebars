            async displayAttendanceSummary() {
                try {
                   
                    const attendanceRecords = await fetch('/api/employees/me')
                        .then(res => res.json())
                        .then(async result => {
                            if (result.success && result.data) {
                                return await api.getAttendanceByEmployee(result.data._id);
                            }
                            return [];
                        });

                    
                    const now = new Date();
                    const currentMonth = now.getMonth();
                    const currentYear = now.getFullYear();
                    const monthName = now.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });

                    
                    const monthRecords = attendanceRecords.filter(record => {
                        const recordDate = new Date(record.date);
                        return recordDate.getMonth() === currentMonth &&
                            recordDate.getFullYear() === currentYear;
                    });

                
                    const presentCount = monthRecords.filter(r => r.status === 'present').length;
                    const absentCount = monthRecords.filter(r => r.status === 'absent').length;
                    const lateCount = monthRecords.filter(r => r.status === 'late').length;

                  
                    const attendanceSection = document.querySelector('.attendance-card');
                    if (attendanceSection) {
                        attendanceSection.querySelector('.attendance-title').textContent = `${monthName} Attendance Summary`;
                        attendanceSection.querySelector('.attendance-stats').innerHTML = `
                            <div class="attendance-stat">
                                <div class="attendance-number" style="color: #48bb78;">${presentCount}</div>
                                <div class="attendance-label">Present</div>
                            </div>
                            <div class="attendance-stat">
                                <div class="attendance-number" style="color: #f56565;">${absentCount}</div>
                                <div class="attendance-label">Absent</div>
                            </div>
                            <div class="attendance-stat">
                                <div class="attendance-number" style="color: #ed8936;">${lateCount}</div>
                                <div class="attendance-label">Late</div>
                            </div>
                        `;
                    }
                } catch (error) {
                    console.error('Error loading attendance summary:', error);
                }
            }

            async displayRecentPayslips() {
                try {
                   
                    const employees = await api.getEmployees();
                    const employeeData = employees.find(emp => emp.employeeId === this.id);

                    if (!employeeData || !employeeData._id) {
                        console.log('Employee not found in database');
                        document.querySelector('.recent-payslips').innerHTML = `
                            <div class="info-header">
                                <h3 class="info-title">Recent Payslips</h3>
                            </div>
                            <div style="padding: 2rem; text-align: center; color: #6b7280;">
                                No payslip records found
                            </div>
                        `;
                        return;
                    }

                    const payrollData = await api.getPayrollByEmployee(employeeData._id);
                    const payslipsSection = document.querySelector('.recent-payslips');

                    if (!payrollData || payrollData.length === 0) {
                        payslipsSection.innerHTML = `
                            <div class="info-header">
                                <h3 class="info-title">Recent Payslips</h3>
                            </div>
                            <div style="padding: 2rem; text-align: center; color: #6b7280;">
                                No payslip records found
                            </div>
                        `;
                        return;
                    }

                    const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                        'July', 'August', 'September', 'October', 'November', 'December'];

                    
                    const sortedPayslips = [...payrollData]
                        .sort((a, b) => new Date(b.paymentDate || 0) - new Date(a.paymentDate || 0))
                        .slice(0, 3);

                    const payslipsHTML = sortedPayslips.map(payslip => {
                        let monthDisplay;
                        if (typeof payslip.month === 'string') {
                            monthDisplay = payslip.month;
                        } else if (typeof payslip.month === 'number') {
                            monthDisplay = monthNames[payslip.month - 1] || 'Unknown';
                        } else {
                            monthDisplay = 'Unknown';
                        }

                        const monthYear = `${monthDisplay} ${payslip.year || new Date().getFullYear()}`;
                        const processDate = payslip.paymentDate ?
                            new Date(payslip.paymentDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) :
                            'Not processed';

                        return `
                            <div class="payslip-item">
                                <div class="payslip-info">
                                    <div class="payslip-month">${monthYear}</div>
                                    <div class="payslip-date">Processed on ${processDate} ‚Ä¢ ${payslip.status.charAt(0).toUpperCase() + payslip.status.slice(1)}</div>
                                </div>
                                <div class="payslip-amount">‚Çπ${payslip.netSalary.toLocaleString()}</div>
                                <a href="employee-payslips.html" class="payslip-download">View</a>
                            </div>
                        `;
                    }).join('');

                    payslipsSection.innerHTML = `
                        <div class="info-header">
                            <h3 class="info-title">Recent Payslips</h3>
                        </div>
                        ${payslipsHTML}
                    `;
                } catch (error) {
                    console.error('Error loading payslips:', error);
                    document.querySelector('.recent-payslips').innerHTML = `
                        <div class="info-header">
                            <h3 class="info-title">Recent Payslips</h3>
                        </div>
                        <div style="padding: 2rem; text-align: center; color: #6b7280;">
                            Error loading payslips
                        </div>
                    `;
                }
            }
        }

