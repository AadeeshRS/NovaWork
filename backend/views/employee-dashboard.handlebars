    <script>
        class Employee {
            static employeeCount = 0;

            constructor(name, id, department, designation, salary, joiningDate, email = null, phone = null, address = null) {
                this.name = name;
                this.id = id;
                this.department = department;
                this.designation = designation;
                this.salary = typeof salary === 'number' ? salary : parseInt(salary) || 0;
                this.joiningDate = new Date(joiningDate);
                this.email = email;
                this.phone = phone;
                this.address = address;
                this.presentDays = 0; 
                this.annualLeave = 18;
                this.sickLeave = 8;
                this.casualLeave = 5;
                Employee.employeeCount++;
            }

            async fetchAttendanceData(employeeMongoId) {
                try {
                    const attendanceRecords = await api.getAttendanceByEmployee(employeeMongoId);
                    
                    
                    const now = new Date();
                    const currentMonth = now.getMonth();
                    const currentYear = now.getFullYear();

                  
                    const monthRecords = attendanceRecords.filter(record => {
                        const recordDate = new Date(record.date);
                        return recordDate.getMonth() === currentMonth &&
                            recordDate.getFullYear() === currentYear;
                    });

                   
                    this.presentDays = monthRecords.filter(r => r.status === 'present').length;
                } catch (error) {
                    console.error('Error fetching attendance:', error);
                    this.presentDays = 0;
                }
            }

            async fetchLeaveBalance(employeeMongoId) {
                try {
                    const leaveRequests = await api.getLeavesByEmployee(employeeMongoId);
                    
                  
                    const approved = leaveRequests.filter(r => r.status === 'approved');
                    const annualUsed = approved.filter(r => r.leaveType === 'annual').reduce((sum, r) => sum + (r.days || 0), 0);
                    const sickUsed = approved.filter(r => r.leaveType === 'sick').reduce((sum, r) => sum + (r.days || 0), 0);
                    const casualUsed = approved.filter(r => r.leaveType === 'casual').reduce((sum, r) => sum + (r.days || 0), 0);

                    
                    this.annualLeave = Math.max(0, 18 - annualUsed);
                    this.sickLeave = Math.max(0, 8 - sickUsed);
                    this.casualLeave = Math.max(0, 5 - casualUsed);
                } catch (error) {
                    console.error('Error fetching leave balance:', error);
                }
            }

            calculateYearsOfService() {
                const today = new Date();
                const years = today.getFullYear() - this.joiningDate.getFullYear();
                return years;
            }

            calculatePerformance() {
                const attendanceRate = (this.presentDays / 22) * 100;
                return Math.round(attendanceRate);
            }

            getTotalLeaves() {
                return this.annualLeave + this.sickLeave + this.casualLeave;
            }

