    </div>

    <!-- Leave Details Modal -->
    <div id="leaveModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Leave Request Details</h2>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Employee</label>
                    <input type="text" id="modalEmployee" readonly>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Leave Type</label>
                        <input type="text" id="modalLeaveType" readonly>
                    </div>
                    <div class="form-group">
                        <label>Days</label>
                        <input type="text" id="modalDays" readonly>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="text" id="modalStartDate" readonly>
                    </div>
                    <div class="form-group">
                        <label>End Date</label>
                        <input type="text" id="modalEndDate" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label>Reason</label>
                    <textarea id="modalReason" rows="3" readonly></textarea>
                </div>
                <div class="form-group">
                    <label>Applied Date</label>
                    <input type="text" id="modalAppliedDate" readonly>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <input type="text" id="modalStatus" readonly>
                </div>
                <div id="approvalSection" style="display: none;">
                    <div class="form-group">
                        <label>Approved By</label>
                        <input type="text" id="modalApprovedBy" readonly>
                    </div>
                    <div class="form-group">
                        <label>Approved Date</label>
                        <input type="text" id="modalApprovedDate" readonly>
                    </div>
                </div>
                <div id="rejectionSection" style="display: none;">
                    <div class="form-group">
                        <label>Rejection Reason</label>
                        <textarea id="modalRejectionReason" rows="2" readonly></textarea>
                    </div>
                </div>
                <div id="actionButtons" style="display: none; margin-top: 1rem;">
                    <div class="form-group">
                        <label>Rejection Reason (if rejecting)</label>
                        <textarea id="rejectionReasonInput" rows="2"
                            placeholder="Enter reason for rejection..."></textarea>
                    </div>
                    <div style="display: flex; gap: 1rem; justify-content: flex-end;">
                        <button type="button" class="btn btn-success" onclick="approveLeave()">‚úÖ Approve</button>
                        <button type="button" class="btn btn-danger" onclick="rejectLeave()">‚ùå Reject</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/api.js"></script>
    <script>
        const api = new API();
        let allLeaves = [];
        let currentLeaveId = null;

        async function loadLeaves() {
            try {
                allLeaves = await api.getLeaves();
                updateStats();
                filterLeaves();
            } catch (error) {
                console.error('Error loading leaves:', error);
                document.getElementById('leavesTableBody').innerHTML = `
                    <tr>
                        <td colspan="8" style="text-align: center; padding: 2rem; color: #ef4444;">
                            Error loading leave requests
                        </td>
                    </tr>
                `;
            }
        }

        function updateStats() {
            const pending = allLeaves.filter(l => l.status === 'pending').length;
            const approved = allLeaves.filter(l => l.status === 'approved').length;
            const rejected = allLeaves.filter(l => l.status === 'rejected').length;
            const total = allLeaves.length;

            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('approvedCount').textContent = approved;
            document.getElementById('rejectedCount').textContent = rejected;
            document.getElementById('totalCount').textContent = total;

            // Update percentages
            const approvedPercent = total > 0 ? Math.round((approved / total) * 100) : 0;
            const rejectedPercent = total > 0 ? Math.round((rejected / total) * 100) : 0;
            document.getElementById('approvedPercent').textContent = `${approvedPercent}% of total`;
            document.getElementById('rejectedPercent').textContent = `${rejectedPercent}% of total`;
        }

        function filterLeaves() {
            const statusFilter = document.getElementById('statusFilter').value;
            const typeFilter = document.getElementById('typeFilter').value;

            let filtered = [...allLeaves];

            if (statusFilter !== 'all') {
                filtered = filtered.filter(l => l.status === statusFilter);
            }

            if (typeFilter !== 'all') {
                filtered = filtered.filter(l => l.leaveType === typeFilter);
            }

            displayLeaves(filtered);
        }

        function displayLeaves(leaves) {
            const tbody = document.getElementById('leavesTableBody');

            if (leaves.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="8" style="text-align: center; padding: 2rem;">
                            No leave requests found
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = leaves.map(leave => {
                const statusClass = leave.status === 'approved' ? 'status-active' :
                    leave.status === 'rejected' ? 'status-inactive' : 'status-pending';
                const statusIcon = leave.status === 'approved' ? '‚úÖ' :
                    leave.status === 'rejected' ? '‚ùå' : 'üïê';

                const employeeName = leave.employee ? leave.employee.name : 'Unknown';
                const employeeId = leave.employee ? leave.employee.employeeId : 'N/A';
                const startDate = new Date(leave.startDate).toLocaleDateString();
                const endDate = new Date(leave.endDate).toLocaleDateString();
                const appliedDate = new Date(leave.appliedDate).toLocaleDateString();

                const leaveTypeDisplay = leave.leaveType.charAt(0).toUpperCase() + leave.leaveType.slice(1);

                return `
                    <tr>
                        <td>
                            <div class="employee-info">
                                <strong>${employeeName}</strong>
                                <span class="employee-id">${employeeId}</span>
                            </div>
                        </td>
                        <td>${leaveTypeDisplay}</td>
                        <td>${startDate}</td>
                        <td>${endDate}</td>
                        <td><strong>${leave.days}</strong></td>
                        <td>${appliedDate}</td>
                        <td><span class="status-badge ${statusClass}">${statusIcon} ${leave.status.toUpperCase()}</span></td>
                        <td>
                            <button class="action-btn" onclick="viewLeave('${leave._id}')">View</button>
                            ${leave.status === 'pending' ? `<button class="action-btn" onclick="deleteLeave('${leave._id}')">Delete</button>` : ''}
                        </td>
                    </tr>
                `;
            }).join('');
        }

        function viewLeave(id) {
            const leave = allLeaves.find(l => l._id === id);
            if (!leave) return;

            currentLeaveId = id;

            document.getElementById('modalEmployee').value = leave.employee ? leave.employee.name : 'Unknown';
            document.getElementById('modalLeaveType').value = leave.leaveType.charAt(0).toUpperCase() + leave.leaveType.slice(1);
            document.getElementById('modalDays').value = leave.days;
            document.getElementById('modalStartDate').value = new Date(leave.startDate).toLocaleDateString();
            document.getElementById('modalEndDate').value = new Date(leave.endDate).toLocaleDateString();
            document.getElementById('modalReason').value = leave.reason;
            document.getElementById('modalAppliedDate').value = new Date(leave.appliedDate).toLocaleDateString();
            document.getElementById('modalStatus').value = leave.status.toUpperCase();

            // Show/hide sections based on status
            const approvalSection = document.getElementById('approvalSection');
            const rejectionSection = document.getElementById('rejectionSection');
            const actionButtons = document.getElementById('actionButtons');

            approvalSection.style.display = 'none';
            rejectionSection.style.display = 'none';
            actionButtons.style.display = 'none';

            if (leave.status === 'approved') {
                approvalSection.style.display = 'block';
                document.getElementById('modalApprovedBy').value = leave.approvedBy || 'N/A';
                document.getElementById('modalApprovedDate').value = leave.approvedDate ?
                    new Date(leave.approvedDate).toLocaleDateString() : 'N/A';
            } else if (leave.status === 'rejected') {
                rejectionSection.style.display = 'block';
                document.getElementById('modalRejectionReason').value = leave.rejectionReason || 'N/A';
            } else if (leave.status === 'pending') {
                actionButtons.style.display = 'block';
                document.getElementById('rejectionReasonInput').value = '';
            }

            document.getElementById('leaveModal').style.display = 'block';
        }

        async function approveLeave() {
            if (!currentLeaveId) return;

            if (!confirm('Are you sure you want to approve this leave request?')) return;

            try {
                await api.updateLeave(currentLeaveId, {
                    status: 'approved',
                    approvedBy: 'Admin',
                    approvedDate: new Date()
                });

                alert('Leave request approved successfully!');
                document.getElementById('leaveModal').style.display = 'none';
                loadLeaves();
            } catch (error) {
                console.error('Error approving leave:', error);
                alert('Error approving leave request');
            }
        }

        async function rejectLeave() {
            if (!currentLeaveId) return;

            const reason = document.getElementById('rejectionReasonInput').value.trim();
            if (!reason) {
                alert('Please provide a reason for rejection');
                return;
            }

            if (!confirm('Are you sure you want to reject this leave request?')) return;

            try {
                await api.updateLeave(currentLeaveId, {
                    status: 'rejected',
                    rejectionReason: reason,
                    approvedBy: 'Admin',
                    approvedDate: new Date()
                });

                alert('Leave request rejected');
                document.getElementById('leaveModal').style.display = 'none';
                loadLeaves();
            } catch (error) {
                console.error('Error rejecting leave:', error);
                alert('Error rejecting leave request');
            }
        }

        async function deleteLeave(id) {
            if (!confirm('Are you sure you want to delete this leave request?')) return;

            try {
                await api.deleteLeave(id);
                alert('Leave request deleted successfully!');
                loadLeaves();
            } catch (error) {
                console.error('Error deleting leave:', error);
                alert('Error deleting leave request');
            }
        }

        // Modal controls
        document.querySelector('.close').onclick = function () {
            document.getElementById('leaveModal').style.display = 'none';
        };

        window.onclick = function (event) {
            const modal = document.getElementById('leaveModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        };

        // Event listeners
        document.getElementById('statusFilter').addEventListener('change', filterLeaves);
        document.getElementById('typeFilter').addEventListener('change', filterLeaves);

        // Load data on page load
        loadLeaves();
    </script>


